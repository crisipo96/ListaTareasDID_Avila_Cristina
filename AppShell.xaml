<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ListaTareas_AvilaCristina_DID.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ListaTareas_AvilaCristina_DID"
    Shell.FlyoutBehavior="Disabled"
    xmlns:views="clr-namespace:ListaTareas_AvilaCristina_DID.MVVM.View"
    Title="ListaTareas_AvilaCristina_DID">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:TaskView}" 
        Route="taskView"/>
        

    <ShellContent
        Title="Detail"
        ContentTemplate="{DataTemplate  views:DetailTaskView}"
        Route="detailTask"/>

    <ShellContent
        Title="NewTask"
        ContentTemplate="{DataTemplate  views:NewTaskView}"
        Route="newTask"/>
</Shell>
